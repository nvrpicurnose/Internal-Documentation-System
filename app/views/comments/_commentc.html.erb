
	<% @comments.each do |comment| %>
		<% if comment.category_id.present? && comment.category_id == @category.id %>
			<div class='commente'>
				<%= simple_format comment.title %>
				<%= simple_format comment.content %>
				<%= comment.article_id %>
				<%= comment.category_id %>
				Posted by <%= comment.user_email %><br />
				on <%= comment.created_at.strftime("%B %d %Y") %><br />
				<% if user_signed_in? && current_user.email == comment.user_email %>
					<%= link_to 'edit', edit_comment_path(:id=>comment.id), :class => 'action edit'%>
					<%= link_to 'delete', comment_path(:id=>comment.id), method: :delete, :confirm=>"Are you sure you want to delete this comment?" %>
				<% end %>
			</div>
		<% end %>
	<% end %>
